<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign In</title>
    <link href="~/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/google-font.css" rel="stylesheet" />

    <style>
        :root {
            --navy-primary: #1e3a8a;
            --navy-secondary: #1e40af;
            --navy-light: #3b82f6;
            --navy-dark: #1e293b;
            --navy-gradient: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
            --shadow-soft: 0 10px 25px rgba(30, 58, 138, 0.1);
            --shadow-hover: 0 20px 40px rgba(30, 58, 138, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--navy-gradient);
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
        }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.05"><circle cx="30" cy="30" r="2"/></g></svg>') repeat;
            z-index: 1;
        }

        .login-container {
            position: relative;
            z-index: 2;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 24px;
            padding: 3rem;
            width: 100%;
            max-width: 450px;
            box-shadow: var(--shadow-soft);
            transform: translateY(0);
            transition: all 0.3s ease;
            animation: slideUp 0.6s ease-out;
        }

        .login-card:hover {
            box-shadow: var(--shadow-hover);
            transform: translateY(-5px);
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 2rem;
        }

        .brand-logo h1 {
            color: var(--navy-primary);
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .brand-logo p {
            color: #64748b;
            font-size: 0.95rem;
            font-weight: 400;
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-floating > .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 1rem 1rem;
            font-size: 1rem;
            background: #ffffff;
            transition: all 0.3s ease;
        }

        .form-floating > .form-control:focus {
            border-color: var(--navy-light);
            box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.1);
        }

        .form-floating > label {
            color: #64748b;
            font-weight: 500;
        }

        .btn-navy {
            background: var(--navy-gradient);
            border: none;
            color: white;
            padding: 0.875rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            width: 100%;
            transition: all 0.3s ease;
            margin-bottom: 1.5rem;
        }

        .btn-navy:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
            color: white;
        }

        .btn-social {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.875rem 1.5rem;
            border-radius: 12px;
            font-weight: 500;
            font-size: 0.95rem;
            width: 100%;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
            border: 2px solid #e2e8f0;
            background: white;
            text-decoration: none;
        }

        .btn-social:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-soft);
        }

        .btn-google {
            color: #dc2626;
            border-color: #fecaca;
        }

        .btn-google:hover {
            background: #fef2f2;
            border-color: #fca5a5;
            color: #dc2626;
        }

        .btn-linkedin {
            color: #0066cc;
            border-color: #bfdbfe;
        }

        .btn-linkedin:hover {
            background: #eff6ff;
            border-color: #93c5fd;
            color: #0066cc;
        }

        .social-icon {
            margin-right: 0.75rem;
            font-size: 1.25rem;
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 2rem 0;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e2e8f0;
        }

        .divider span {
            padding: 0 1rem;
            color: #64748b;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .form-check {
            margin-bottom: 1.5rem;
        }

        .form-check-input:checked {
            background-color: var(--navy-primary);
            border-color: var(--navy-primary);
        }

        .form-check-label {
            color: #475569;
            font-size: 0.9rem;
        }

        .forgot-password {
            text-align: center;
            margin-top: 1.5rem;
        }

        .forgot-password a {
            color: var(--navy-primary);
            text-decoration: none;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .forgot-password a:hover {
            color: var(--navy-secondary);
        }

        .signup-link {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #e2e8f0;
        }

        .signup-link p {
            color: #64748b;
            margin-bottom: 0.5rem;
        }

        .signup-link a {
            color: var(--navy-primary);
            text-decoration: none;
            font-weight: 600;
        }

        .signup-link a:hover {
            color: var(--navy-secondary);
        }

        .alert {
            border-radius: 12px;
            border: none;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .alert-danger {
            background: #fef2f2;
            color: #dc2626;
        }

        .floating-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .shape {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .shape:nth-child(1) {
            width: 80px;
            height: 80px;
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            width: 120px;
            height: 120px;
            top: 60%;
            right: 10%;
            animation-delay: 2s;
        }

        .shape:nth-child(3) {
            width: 60px;
            height: 60px;
            bottom: 20%;
            left: 20%;
            animation-delay: 4s;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }
            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }

        @@media (max-width: 768px) {
            .login-card {
                padding: 2rem 1.5rem;
                margin: 1rem;
            }

            .brand-logo h1 {
                font-size: 1.75rem;
            }
        }
    </style>
</head>
<body>
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="login-container">
        <div class="login-card">
            <div class="brand-logo">
                <h1><i class="fas fa-building-user"></i> Login</h1>
                <p>Welcome back! Please sign in to continue</p>
            </div>

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- Social Login Buttons -->
            <button type="submit" onclick="signInWithGoogle()" class="btn btn-social btn-google">
                <i class="fab fa-google social-icon"></i>
                Continue with Google
            </button>
            <button type="submit" onclick="signInWithLinkedIn()" class="btn btn-social btn-linkedin">
                <i class="fab fa-linkedin social-icon"></i>
                Continue with LinkedIn
            </button>

            <div class="divider">
                <span>or sign in with email</span>
            </div>

            <!-- Manual Login Form -->
            <form method="post" asp-action="Index" asp-controller="CompanySelection">
                <div class="form-floating">
                    <input type="email" class="form-control" id="email" name="email" placeholder="name@company.com" required>
                    <label for="email">Email address</label>
                </div>

                <div class="form-floating">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    <label for="password">Password</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        Remember me for 30 days
                    </label>
                </div>

                <button type="submit" class="btn btn-navy">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Sign In
                </button>
            </form>

            <div class="forgot-password">
                <a href="#">Forgot your password?</a>
            </div>
        </div>
    </div>
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<script>
    var API_BASE_URL = 'https://localhost:7160';
    function signInWithGoogle() {
        debugger;
        const googleAuthUrl = `${API_BASE_URL}/api/v1/Auth/SignInWithGoogle`;
        window.location.href = googleAuthUrl;
    }
    function signInWithLinkedIn() {
        debugger;
        const linkedInAuthUrl = `${API_BASE_URL}/api/v1/Auth/SignInWithLinkedIn`;
        window.location.href = linkedInAuthUrl;
    }
</script>